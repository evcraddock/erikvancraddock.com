---
import { Icon } from 'astro-icon';
---
<div
  class="w-full mt-4 block rounded-lg bg-slate-500 text-center shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)]">
  <div
    class="border-b-2 border-black-100 px-6 py-3">
    <h5
      class="mb-2 text-xl font-medium leading-tight text-black-800">
      Follow me on Social Media 
    </h5>
  </div>
  <div class="p-6">
    <div class="flex space-x-5 justify-center">
      <a class="align-bottom" href="https://mastodon.online/@evcraddock" target="_blank">
        <Icon class="h-6 w-6" name="simple-icons:mastodon" />
      </a>
      <a class="align-bottom" href="https://www.facebook.com/evcraddock" target="_blank">
        <Icon class="h-6 w-6" name="logos:facebook" />
      </a>
      <a class="align-bottom" href="https://www.youtube.com/evcraddock" target="_blank">
        <Icon class="h-6 w-6" name="simple-icons:youtube" />
      </a>
      <a class="" href="https://twitter.com/evcraddock" target="_blank">
        <Icon class="h-6" name="logos:twitter" />
      </a>
    </div>
  </div>
</div>

